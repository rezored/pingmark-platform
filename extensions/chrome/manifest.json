{
  "manifest_version": 3,
  "name": "Pingmark Type-to-Link",
  "version": "0.3.0",
  "description": "Type !@ and it auto-expands to a pingmark.me link with your current coordinates and timestamp.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Pingmark Type-to-Link"
  }
}